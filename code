// Helper function to add two numbers
function add(a, b) {
    return a + b;
}

// Helper function to subtract two numbers
function subtract(a, b) {
    return a - b;
}

// Helper function to multiply two numbers
function multiply(a, b) {
    return a * b;
}

// Helper function to divide two numbers
function divide(a, b) {
    if (b === 0) {
        return "Error: Division by zero is not allowed.";
    }
    return a / b;
}

// Function to perform all operations and display results
function calculateAndDisplay(a, b) {
    console.log(`Addition of ${a} and ${b}: ${add(a, b)}`);
    console.log(`Subtraction of ${b} from ${a}: ${subtract(a, b)}`);
    console.log(`Multiplication of ${a} and ${b}: ${multiply(a, b)}`);
    console.log(`Division of ${a} by ${b}: ${divide(a, b)}`);
}

// Example usage
const number1 = 20;
const number2 = 4;

calculateAndDisplay(number1, number2);